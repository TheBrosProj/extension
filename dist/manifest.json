
{
    "manifest_version": 3,
    "name": "Notes App Extension",
    "description": "A Chrome Extension for sending notes to notes application. If you are new here, login in the extension once.",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/backgroundPage.js"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "host_permissions": ["https:\/\/*/*"],
    "permissions": ["tabs", "activeTab", "notifications", "scripting","contextMenus", "storage"]
}

